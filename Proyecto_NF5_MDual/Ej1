$vmName = "xcoma1"
$vboxManagePath = "C:\Program Files\Oracle\VirtualBox\VBoxManage.exe"

# Crear la m치quina virtual
& "$vboxManagePath" createvm --name $vmName --register

# Configurar la m치quina virtual
& "$vboxManagePath" modifyvm $vmName --memory 2048 --cpus 2 --ostype "Windows10_64"

# A침adir 8 tarjetas de red
for ($i = 1; $i -le 8; $i++) {
    & "$vboxManagePath" modifyvm $vmName --nic$i nat
}

Write-Output "M치quina virtual '$vmName' creada con 8 tarjetas de red."
